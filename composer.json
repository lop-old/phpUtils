{
	"name":        "pxn/phputils",
	"description": "PHP Utilities Library",
	"type":        "library",
	"homepage":    "http://poixson.com/",
	"license":     "GPL-3.0",
	"keywords": [
		"framework", "utilities"
	],
	"support": {
		"issues": "https://github.com/PoiXson/phpUtils/issues",
		"source": "https://github.com/PoiXson/phpUtils",
		"irc":    "irc://irc.esper.net/poixson"
	},
	"authors": [{
		"name":  "lorenzop",
		"role":  "Developer"
	}],
	"autoload": {
		"psr-4": {
			"pxn\\phpUtils\\": "src/"
		},
		"files": [
			"src/init.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"pxn\\phpUtils\\tests\\":    "tests/",
			"pxn\\phpUtils\\examples\\": "examples/"
		}
	},
	"archive": {
		"exclude": [
			"tests/",
			"examples/"
		]
	},
	"require-dev": {
		"ext-mbstring":    "*",
		"51systems/doctrine-encrypt": "v6.0.*",
		"filp/whoops":     "2.1.*",
		"phpunit/phpunit": "6.*"
	},
	"scripts": {
		"test": "phpunit"
	}
}
